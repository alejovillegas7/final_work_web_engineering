<%- include("../partials/header") %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Sales inventory</h1>
                <p>Sold products</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/machines">Register new sale</a>
                    <a class="btn btn-warning btn-lg" href="/sales/generatePdf" target="_blank">Generate Weekly Report of the sales</a>
                    <a class="btn btn-info btn-lg" href="/sales/send-email">Send Weekly Report to the Administrator</a>
                </p>
            </div>
        </header>

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% sales.forEach(sale => { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <div class="caption">
                            <h4>
                                <%= sale.product.product_name %>
                            </h4>
                            <h4>Buyer:
                                <%= sale.buyer %>
                            </h4>
                            <h4>Seller:
                                <%= sale.seller.seller_name %>
                            </h4>
                            <h4>Price of sale:
                                <%= sale.price %>
                            </h4>
                            <h4>Date:
                                <%= sale.date.toDateString() %>
                            </h4>
                        </div>
                        <p>
                            <a class="btn btn-success" href="/users/<%= sale.seller.id %>">More Info About the Seller</a>
                        </p>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <%- include("../partials/footer") %>