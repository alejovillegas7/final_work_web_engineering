<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Register new Sale for <%=machine.brand%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/machines/:id/sale" method="POST">
                <div class="form-group">
                    Product: <input class="form-control" type="text" name="product_name" value="<%=machine.brand + " " + machine.model%>" readonly>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="buyer" placeholder="Buyer">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" min="1" name="price" placeholder="Price">
                </div>
                <div class="form-group">
                    Sale Date: <input class="form-control" type="date" name="sale_date" placeholder="Sale Date">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Register Sale!</button>
                </div>
            </form>
            <a href="/machines">Go Back to the inventory!</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>